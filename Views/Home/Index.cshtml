@model IEnumerable<VendaModel>
@{
    ViewBag.Subtitulo = "Página Principal";
}

<h1 class="text-primary">Bem-vindo ao <b>Sistema de Gerenciamento de Vendas <span class="text-danger">AmbevWeb</span></b></h1>
<hr>
<p>Gerencie seu estoque de cervejas e suas vendas. Use o menu superior para acessar os recursos da aplicação.</p>
<hr>

<partial name="_Mensagem"></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-abertos">
        <thead>
            <tr>
                <th>Número</th>
                <th>Cliente</th>
                <th>Valor Total</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.IdVenda.ToString("D4")</td>
                    <td>@pedido.Cliente.Nome</td>
                    <td>@pedido.ValorTotal.Value.ToString("C")</td>
                    <td>
                        <a asp-action="Fechar" asp-route-id="@pedido.IdVenda" asp-controller="Venda" class="btn btn-sm btn-success"><i class="bi-check-lg" title="Fechar venda"></i></a>

                        <a asp-action="Index" asp-controller="ItemVenda" asp-route-ped="@pedido.IdVenda" class="btn btn-sm btn-info"><i class="bi-list-check" title="Itens da venda"></i></a>

                        <a asp-action="Excluir" asp-route-id="@pedido.IdVenda" asp-controller="Pedido" class="btn btn-sm btn-danger"><i class="bi-trash" title="Excluir venda"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma venda em aberto no momento.</p>
}